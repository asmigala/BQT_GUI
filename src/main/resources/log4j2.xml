<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="org.jboss.bqt.gui.appender">
	<Appenders>
		<Console name="CONSOLE" target="SYSTEM_OUT">
			<PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n}{FATAL=red, ERROR=red, WARN=yellow, INFO=black, DEBUG=green, TRACE=blue}"/>
		</Console>
		<GUI name="BQT_GUI">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n" />
		</GUI>
		<GUI name="ALL_GUI">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n" />
		</GUI>
	</Appenders>
	<Loggers>
		<Logger name="org.jboss.bqt.client" level="INFO" additivity="false">
			<AppenderRef ref="BQT_GUI" />
		</Logger>
		<Logger name="org.jboss.bqt.framework" level="INFO" additivity="false">
			<AppenderRef ref="BQT_GUI" />
		</Logger>
		<Root level="DEBUG">
			<AppenderRef ref="CONSOLE" />
			<AppenderRef ref="ALL_GUI" />
		</Root>
	</Loggers>
</Configuration>